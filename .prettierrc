{
	"trailingComma": "none",
	"singleQuote": true,
	"tabWidth": 4,
	"printWidth": 200,
	"useTabs": true,
	"bracketSpacing": true,
	"overrides": [
		{
			"files": "**/lwc/**/*.html",
			"options": { "parser": "lwc" }
		},
		{
			"files": "*.{cmp,page,component}",
			"options": { "parser": "html" }
		},
		{
			"files": ["force-app/**/**/classes/*.cls"]
		}
	]
}
